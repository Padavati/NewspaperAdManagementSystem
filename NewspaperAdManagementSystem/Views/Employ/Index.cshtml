@model IEnumerable<NewspaperAdManagementSystem.Models.EmployDetailsClass>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div>
    <a class="btn btn-primary" asp-action="EmployDetails">Employee Registration</a>
</div>    
        <table class="table table-bordered table-hover table-light">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Full Name</th>
                    <th>Contact Number</th>
                    <th>EmailID</th>
                    <th>Country</th>
                    <th>State</th>
                    <th>City</th>
                    <th>Password</th>
                    <th>Role</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td>@item.EmpID</td>
                    <td>@item.EmpName</td>
                    <td>@item.EmpContactNo</td>
                    <td>@item.EmailID</td>
                    <td>@item.Country</td>
                    <td>@item.State</td>
                    <td>@item.City</td>
                    <td>@item.Pwd</td>
                    <td>@item.Role</td>
                    <td><a asp-action="EditEmployDetails" asp-route-EmpID="@item.EmpID">Edit</a></td>
                    <td><a asp-action="DeleteEmployDetails" asp-route-EmpID="@item.EmpID">Delete</a></td>
                </tr>
            }
            </tbody>
        </table>
