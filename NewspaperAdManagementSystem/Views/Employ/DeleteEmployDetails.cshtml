@{
}

<div>
    <a class="btn btn-primary" asp-action="index">Show Employ Details</a>
</div>
<h4>Are you sure, you want to delete this?</h4>
<form method="post">

    <div>
        <h1>Delete Employee Details</h1>
        <hr />
        <table>
            <tr>
                <td>Employee ID</td>
                <td>
                    <input type="text"  asp-for="EmpID" disabled="disabled" />
                </td>
            </tr>
            <tr>
                <td>Employee Name</td>
                <td>
                    <input type="text"  asp-for="EmpName" disabled="disabled" />
                </td>
            </tr>
            <tr>
                <td>Contact Number</td>
                <td>
                    <input type="text"  asp-for="EmpContactNo" disabled="disabled"/>
                </td>
            </tr>
            <tr>
                <td>EmailID</td>
                <td>
                    <input type="text"  asp-for="EmailID" disabled="disabled"/>
                </td>
            </tr>
            <tr>
                <td>Country</td>
                <td>
                    <input type="text"  asp-for="Country" disabled="disabled"/>
                </td>
            </tr>
            <tr>
                <td>State</td>
                <td>
                    <input type="text"  asp-for="State" disabled="disabled"/>
                </td>
            </tr>
            <tr>
                <td>City</td>
                <td>
                    <input type="text"  asp-for="City" disabled="disabled"/>
                </td>
            </tr>
            <tr>
                <td>Set Password</td>
                <td>
                    <input type="text"  asp-for="Pwd" disabled="disabled" />
                </td>
            </tr>
            <tr>
                <td>Employee Role</td>
                <td>
                    <input type="text"  asp-for="Role" disabled="disabled"/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </td>
            </tr>
        </table>

        <div>
            <hr />
            @ViewBag.message
            <hr />
        </div>
    </div>
</form>